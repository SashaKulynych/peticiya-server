{
    "compilerOptions": {
        "outDir": "./dist",
        "rootDir": ".",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "allowJs": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "noFallthroughCasesInSwitch": true,
    },
    "ts-node": {
        "compilerOptions": {
            "module": "CommonJS",
            "rootDir": "."
        }
    },
    "exclude": [
        "node_modules",
        "dist"
    ]
}